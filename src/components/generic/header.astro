---
import MainNav from "./mainnav.astro";
const { pagesWithUrls } = Astro.props;
---

<header
    class="fixed lg:absolute top-0 z-10 flex flex-row justify-center items-center w-full h-20  bg-neutral-50 py-3"
>
    <div class="flex flex-row justify-end items-center w-full px-8 lg:px-8 lg:w-6/8 h-full text-neutral-950">
        <slot name="logo"/>
        <MainNav pagesWithUrls={pagesWithUrls}/>
    </div>
    <slot name="cta"/>
</header>
