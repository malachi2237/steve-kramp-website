---
import MainNav from "./mainnav.astro";
const { pagesWithUrls } = Astro.props;
---

<header
    class="fixed lg:absolute top-0 z-10 flex flex-row justify-center items-center w-full h-20 bg-white lg:bg-transparent py-3"
>
    <div class="flex flex-row justify-between items-center w-full lg:w-6/8 h-full text-tertiary-00">
        <slot name="logo"/>
        <MainNav pagesWithUrls={pagesWithUrls}/>
    </div>
    <slot name="cta"/>
</header>
