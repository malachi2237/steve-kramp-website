---
import PageSection from "./pagesection.astro";
import SectionWrapper from "./sectionwrapper.astro";
import BackgroundImage from "./backgroundimage.astro";
const { bgImage } = Astro.props;
---

<PageSection id="hero" class="relative sm:h-[75vh] py-16 sm:py-0 h-fit lg:h-screen" wrapper="no">
    <BackgroundImage src={bgImage} loading="eager" widths={[1000, 2000]} position="bottom-0" class="hidden sm:block"/>
    <SectionWrapper class="h-full py-20 animate-fade-in">
        <div
            class="flex flex-col gap-4 justify-center items-center h-full w-full xl:w-1/2"
        >
            <slot />
        </div>
    </SectionWrapper>
</PageSection>
