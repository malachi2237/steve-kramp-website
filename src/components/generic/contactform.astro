<form
    action="https://api.web3forms.com/submit"
    method="POST"
    class="text-gray-300 text-md flex flex-col lg:w-1/2 w-full my-16 mx-auto"
>
    <input
        type="hidden"
        name="access_key"
        value="e46cf3b8-ddd0-4f39-9683-6edcd946966d"
    />

    <label for="name">Name</label>
    <input
        type="text"
        name="name"
        placeholder="John Smith"
        required
        class="border-b-2 border-white mb-4 text-white text-xl"
    />

    <label for="email">Email</label>
    <input
        type="email"
        name="email"
        placeholder="email@example.com"
        required
        class="border-b-2 border-white mb-4 text-white text-xl"
    />

    <label for="message">Message</label>
    <textarea
        name="message"
        placeholder="Write something..."
        required
        class="h-52 border-b-2 border-white mb-16 text-white text-xl"
    ></textarea>

    <input
        type="checkbox"
        name="botcheck"
        class="hidden"
        style="display: none;"
    />

    <input
        type="submit"
        value="Submit"
        class="text-xl text-white rounded-3xl border-2 border-white hover:bg-white hover:text-black py-1"
    />
</form>
