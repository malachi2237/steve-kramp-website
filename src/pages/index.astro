---
import bona700 from "@fontsource/bona-nova-sc/files/bona-nova-sc-latin-700-normal.woff2?url";
import overpass400I from "@fontsource/overpass/files/overpass-latin-400-italic.woff2?url";
import overpass700I from "@fontsource/overpass/files/overpass-latin-700-italic.woff2?url";

import PageLayout from "../layouts/pagelayout.astro";
import PageSection from "../components/generic/pagesection.astro";

import LearnMore from "../components/learnmore.astro";

import heroImage from "../images/steve-kramp-quarter-side.webp";

import Bio from "../components/bio.astro";
import Speaking from "../components/speaking.astro";
import { Picture } from "astro:assets";
---

<PageLayout
    title="Home"
    description=`As an educator, Steve Kramp has taught at UC Merced, the
                Franciscan University of Steubenville, and most recently at John
                Paul the Great Catholic University, where he served for seven
                years as Humanities Chair. His parallel work as a writer and
                performing artist has led to a range of poetry and nonfiction`
>
    <Fragment slot="head">
        <link
            rel="preload"
            as="font"
            type="font/woff2"
            href={bona700}
            crossorigin="anonymous"
        />
        <link
            rel="preload"
            as="font"
            type="font/woff2"
            href={overpass400I}
            crossorigin="anonymous"
        />
        <link
            rel="preload"
            as="font"
            type="font/woff2"
            href={overpass700I}
            crossorigin="anonymous"
        />
    </Fragment>
    <PageSection
        id="#"
        class="h-fit lg:h-120 xl:h-171 bg-neutral-50"
        wrapper="no"
    >
        <div
            class="px-1/8 h-full relative flex-row lg:flex-none lg:mx-auto lg:px-0 md:px-16 px-4 lg:w-6/8"
        >
            <div
                class="text-neutral-950 relative mt-11 md:mt-20 lg:mt-0 lg:absolute lg:top-1/4 lg:w-1/2"
            >
                <h1
                    class="font-serif font-semibold text-white text-7xl sm:text-8xl uppercase tracking-tighter"
                >
                    Steve Kramp
                </h1>
                <p
                    class="absolute top-0 font-serif font-semibold text-white text-7xl sm:text-8xl uppercase tracking-tighter opacity-50 md:opacity-75 lg:opacity-100 blur-xl md:blur-2xl lg:blur-3xl xl:blur-[100px]"
                >
                    Steve Kramp
                </p>
                <h2 class="font-sans italic font-normal text-2xl">
                    <span class="animate-pulse">En</span>countering the
                    counterculture
                </h2>
                <LearnMore />
            </div>
            <Picture
                src={heroImage}
                alt="Steve Kramp in a dark suit and light shirt looking toward the left"
                quality="max"
                priority
                widths={[240, 300, 400, 500, 685]}
                layout="constrained"
                position="bottom"
                fit="contain"
                formats={["avif", "webp"]}
                class="max-h-full w-auto lg:float-right"
            />
        </div>
    </PageSection>
    <Bio />
    <Speaking />
</PageLayout>
